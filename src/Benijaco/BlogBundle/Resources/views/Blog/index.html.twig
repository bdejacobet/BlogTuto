{% extends "BenijacoBlogBundle::layout.html.twig" %}
 
{% block title %}
  Accueil - {{ parent() }}
{% endblock %}
 
{% block benijacoblog_body %}
 
  <h2>Liste des articles</h2>
 
    <ul>
      {% for article in articles %}
        {# On inclut la vue à chaque itération dans la boucle #}
        {% include "BenijacoBlogBundle:Blog:article.html.twig" with {'accueil': true} %}
        <hr />
      {% else %}
        <p>Pas (encore !) d'articles</p>
      {% endfor %}
    </ul>
  
    <div class="pagination">
    <ul>
      {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
      {% for p in range(1, nombrePage) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('benijacoblog_accueil', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
 
{% endblock %}